{
	"manifest_version": 2,
	"name": "BME - Bookmarks",
	"version": "1.7",
	"version_name": "release: 1.7 (commit: 91a54bb262765a40c6cb281a3501d3b546e2b9e6)",
	"description": "BOOTSTRAP ME - sync bookmarks with git",
	"homepage_url": "https://github.com/wei3er/bme-bookmarks",

	"icons": {
		"48": "icons/logo-48.png",
		"96": "icons/logo-96.png",
		"128": "icons/logo-128.png",
		"190": "icons/logo-190.png"
	},

	"web_accessible_resources": [
		"icons/*"
	],

	"browser_specific_settings": {
		"gecko": {
			"id": "bme-bookmarks@wei3er.com",
			"strict_min_version": "80.0"
		}
	},

	"permissions": [
		"storage",
		"bookmarks",
		"webRequest",
		"<all_urls>",
		"alarms",
		"unlimitedStorage"
	],

	"browser_action": {
		"browser_style": true,
		"default_icon": "icons/logo-128.png",
		"default_title": "BME - Bookmarks",
		"default_popup": "context/context.html"
	},

	"options_ui": {
		"open_in_tab": false,
		"browser_style": true,
		"page": "opts/options.html"
	},

	"background": {
		"persistent": false,
		"scripts": [
			"background/background.js"
		]
	}

}
