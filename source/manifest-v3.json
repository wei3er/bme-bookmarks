{
	"manifest_version": 3,
	"name": "BME - Bookmarks",
	"version": "1.5",
	"version_name": "release: 1.5 (commit: 51c6614)",
	"description": "BOOTSTRAP ME - sync bookmarks with git",
	"homepage_url": "https://github.com/wei3er/bme-bookmarks",

	"icons": {
		"48": "icons/logo-48.png",
		"96": "icons/logo-96.png",
		"128": "icons/logo-128.png",
		"190": "icons/logo-190.png"
	},

	"web_accessible_resources": [{
		"resources": [ "icons/*" ],
		"matches": [ "https://github.com/*" ]
	}],

	"browser_specific_settings": {
		"gecko": {
			"id": "bme-bookmarks@wei3er.com",
			"strict_min_version": "80.0"
		}
	},

	"permissions": [
		"storage",
		"bookmarks",
		"webRequest",
		"alarms"
	],
	"optional_permissions": [
		"unlimitedStorage"
	],
	"host_permissions": [
		"<all_urls>"
	],

	"action": {
		"browser_style": true,
		"default_icon": "icons/logo-128.png",
		"default_title": "BME - Bookmarks",
		"default_popup": "context/context.html"
	},

	"options_ui": {
		"open_in_tab": false,
		"browser_style": true,
		"page": "opts/options.html"
	},

	"background": {
		"service_worker": "background/background.js",
		"type": "module"
	}

}
